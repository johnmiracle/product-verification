extends layout
include ./mixins/_flash-messages

block content
    .container
      .row
        .col-md-3
        .col-md-6
            form.log-blk(method='POST', action='/login')
                h2.text
                    | Login
                +flashMessages()
                .form-group
                    label(for='exampleInputEmail1') Mobile Number
                    input#exampleInputEmail1.form-control(type='number', name='phone' placeholder='Enter mobile number', required="" )
                .form-group
                    label(for='exampleInputPassword1') Password
                    input#exampleInputPassword1.form-control(type='password', name='password' placeholder='Password', required="")
                button.btn.btn-primary.btn-block(type='submit' name='submit' value='Submit') SIGN IN
                br
                p.center 
                    | OR
                .center
                    a.btn.btn-primary.loginBtn.loginBtn--twitter(href='/login/twitter') Login with Twitter
                    a.btn.loginBtn.loginBtn--facebook(href='/login/facebook') Login with Facebook
                    .center
                        a.btn.loginBtn.loginBtn--google(href='/login/google') Login with Google
                center
                  a.log-ml.ml-r(href='#') Forgotten Password
            center.log-top
                | Dont have an account? 
                a(href='/register') Sign Up
        .col-md-3
