extends layout
include ./mixins/_flash-messages

block content
    .container
        +flashMessages().mt-5
        .row
            .col-md-3
            .col-md-6
                .container.mt-5
                    .point-box.mb-3
                        h3 #{user.points} Points.
                    form.pt-4(method='POST', action='/verify-product')
                        .md-form
                            input#form1.form-control(type='number' name="codeNumber" required="")
                            label(for='form1') Product Code
                        button.btn.btn-block.btn-primary(type='submit') Verify
            .col-md-3
        